{
  "compilerOptions": {
    "target": "ES2020",              // Modern JS features
    "module": "CommonJS",            // Compile to CommonJS, no extensions needed
    "rootDir": "src",                // Your source folder
    "outDir": "dist",                // Compiled JS output
    "strict": true,                  // Enable all strict checks
    "esModuleInterop": true,         // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,            // Optional, faster build
    "moduleResolution": "node"       // Node-style resolution without requiring extensions
  },
  "include": ["src"],
  "ts-node": {
    "esm": false                     // Important: run ts-node in CommonJS mode
  }
}
